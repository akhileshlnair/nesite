---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css'; // Keep this if you have global styles, otherwise remove.

const title = "Vivral — Private Medical Intelligence";
const description = "Nair Engineering — A fully on-device clinical AI system engineered for physicians.";
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<meta name="description" content={description} />

	<meta name="theme-color" content="#050505" />
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

	<style>
		:root {
			/* --- PALETTE --- */
			--bg-void: #050505;       /* Pure black/void */
			--bg-panel: #121416;      /* Dark grey panel */
			--bg-surface: #1C1E21;    /* Slightly lighter surface */

			--accent-mint: #86F7C6;   /* Glowing green */
			--accent-mint-dim: rgba(134, 247, 198, 0.1);
			
			--accent-peach: #FFB388;  /* Action color */
			--accent-peach-glow: rgba(255, 179, 136, 0.4);

			--text-bright: #FFFFFF;
			--text-muted: #889096;
			--text-tech: #5C6369;

			--radius-pill: 999px;
			--radius-card: 24px;
			
			--glow-mint: 0 0 20px rgba(134, 247, 198, 0.25);
			--glow-peach: 0 0 30px rgba(255, 179, 136, 0.3);
			--glass-border: 1px solid rgba(255, 255, 255, 0.08);
		}

		body {
			background-color: var(--bg-void);
			/* Subtle noise texture */
			background-image: radial-gradient(circle at 50% 0%, #1a2024 0%, var(--bg-void) 60%);
			color: var(--text-bright);
			margin: 0;
			font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
			overflow-x: hidden;
		}

		main {
			max-width: 1200px;
			margin: 0 auto;
			padding: 0 1.5rem;
			position: relative;
			z-index: 1;
		}

		/* Typography Overrides */
		h1, h2, h3 { letter-spacing: -0.02em; }
		.mono {
			font-family: 'SF Mono', 'Menlo', monospace;
			font-size: 0.85rem;
			text-transform: uppercase;
			letter-spacing: 0.08em;
		}

		/* --- COMPONENTS --- */

		/* Pill Badge */
		.tech-badge {
			display: inline-flex;
			align-items: center;
			padding: 0.5rem 1rem;
			background: var(--bg-surface);
			border: var(--glass-border);
			border-radius: var(--radius-pill);
			font-size: 0.8rem;
			color: var(--text-muted);
			backdrop-filter: blur(10px);
			margin-bottom: 2rem;
			box-shadow: 0 4px 20px rgba(0,0,0,0.4);
		}
		.tech-badge span { color: var(--accent-mint); margin-right: 8px; }

		/* Input Island (CTA) */
		.input-island-container {
			background: rgba(30, 34, 38, 0.6);
			border: var(--glass-border);
			border-radius: 32px;
			padding: 10px;
			display: flex;
			align-items: center;
			width: 100%;
			max-width: 400px;
			backdrop-filter: blur(15px);
			-webkit-backdrop-filter: blur(15px);
			box-shadow: 0 10px 40px rgba(0,0,0,0.5);
			margin-top: 2rem;
		}

		.input-island-text {
			flex: 1;
			padding: 0 1.5rem;
			color: var(--text-tech);
			font-size: 0.95rem;
			text-align: left;
		}

		.btn-action {
			width: 48px;
			height: 48px;
			border-radius: 20px;
			background: var(--accent-peach);
			border: none;
			display: flex;
			align-items: center;
			justify-content: center;
			cursor: pointer;
			box-shadow: var(--glow-peach);
			transition: transform 0.2s;
		}
		.btn-action:hover { transform: scale(1.05); }
		.btn-action svg { fill: #3e2010; width: 20px; height: 20px; }

		/* --- SECTIONS --- */

		.hero-section {
			min-height: 90vh;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			text-align: center;
			padding-top: 6rem;
			position: relative;
		}

		.ambient-glow {
			position: absolute;
			top: -10%; left: 50%;
			transform: translateX(-50%);
			width: 600px; height: 600px;
			background: radial-gradient(circle, rgba(134, 247, 198, 0.08) 0%, rgba(0,0,0,0) 70%);
			pointer-events: none;
			z-index: -1;
		}

		.hero-title {
			font-size: clamp(3rem, 6vw, 5rem);
			font-weight: 700;
			line-height: 1;
			margin-bottom: 1.5rem;
			background: linear-gradient(180deg, #fff 0%, #aab 100%);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			text-shadow: 0 0 40px rgba(255,255,255,0.1);
		}

		.hero-sub {
			font-size: 1.25rem;
			color: var(--text-muted);
			max-width: 600px;
			line-height: 1.6;
		}

		/* Feature Grid */
		.feature-grid {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
			align-items: center;
			padding: 8rem 0;
		}
		.feature-grid.reverse { direction: rtl; }
		.feature-grid.reverse > * { direction: ltr; }

		@media (max-width: 900px) {
			.feature-grid, .feature-grid.reverse {
				grid-template-columns: 1fr;
				direction: ltr;
				gap: 3rem;
			}
		}

		/* Cards */
		.data-card {
			background: var(--bg-panel);
			border: var(--glass-border);
			border-radius: var(--radius-card);
			padding: 2.5rem;
			position: relative;
			overflow: hidden;
		}
		.data-card::before {
			content: ''; position: absolute; top: 0; left: 0; right: 0; height: 1px;
			background: linear-gradient(90deg, transparent, var(--accent-mint), transparent);
			opacity: 0.5;
		}

		.feature-title { font-size: 2rem; margin: 0 0 1rem; }
		.feature-desc { color: var(--text-muted); line-height: 1.6; margin-bottom: 2rem; }

		.data-row {
			display: flex; justify-content: space-between;
			border-bottom: 1px solid rgba(255,255,255,0.05);
			padding: 1rem 0;
			font-family: 'SF Mono', monospace; font-size: 0.9rem;
		}
		.data-label { color: var(--text-tech); }
		.data-value { color: var(--accent-mint); }

		/* Phone Mockup */
		.phone-mockup {
			background: #000;
			border-radius: 40px;
			border: 4px solid #2a2a2a;
			overflow: hidden;
			box-shadow: 0 20px 50px rgba(0,0,0,0.5);
			position: relative;
			aspect-ratio: 9/19.5;
			max-width: 380px;
			margin: 0 auto;
		}
		.phone-mockup img { width: 100%; height: 100%; object-fit: cover; opacity: 0.9; }
		.phone-mockup::after {
			content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0;
			background: linear-gradient(135deg, rgba(255,255,255,0.05) 0%, transparent 40%);
			pointer-events: none;
		}

		.footer-tag {
			text-align: center; padding: 4rem 0;
			color: var(--text-tech); font-size: 0.8rem;
			letter-spacing: 0.2em; text-transform: uppercase;
			border-top: 1px solid rgba(255,255,255,0.05); margin-top: 4rem;
		}
	</style>
</head>

<body>
	<Header />

	<main>
		<div class="ambient-glow"></div>

		<section class="hero-section">
			
			<div class="tech-badge">
				<span>●</span> VIVRAL BETA v1.0
			</div>

			<h1 class="hero-title">
				Private Intelligence<br>
				<span style="color: var(--accent-mint); -webkit-text-fill-color: var(--accent-mint);">Local Reality.</span>
			</h1>

			<p class="hero-sub">
				A fully on-device clinical AI system engineered for physicians.
				Zero latency. Zero cloud dependencies. Pure signal.
			</p>

			<div class="input-island-container">
				<div class="input-island-text">Join the waitlist...</div>
				<button class="btn-action">
					<svg viewBox="0 0 24 24"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
				</button>
			</div>
			
			<div style="margin-top: 1rem; font-size: 0.75rem; color: var(--text-tech);">
				AVAILABLE ON IOS • NAIR ENGINEERING
			</div>
		</section>

		<section class="feature-grid">
			<div class="phone-mockup">
				<img src="/images/screenshot1.png" alt="Vivral Home">
			</div>
			
			<div class="data-card">
				<div class="mono" style="color: var(--accent-mint); margin-bottom: 1rem;">// SYSTEM_CAPABILITY_01</div>
				<h2 class="feature-title">Diagnostic Reasoning</h2>
				<p class="feature-desc">
					Vivral listens to the clinical encounter and constructs differential diagnoses with the reasoning of a thoughtful attending. Fully offline.
				</p>
				
				<div class="data-row">
					<span class="data-label">LATENCY</span>
					<span class="data-value">0ms (Local)</span>
				</div>
				<div class="data-row">
					<span class="data-label">PRIVACY</span>
					<span class="data-value">Air-gapped</span>
				</div>
			</div>
		</section>

		<section class="feature-grid reverse">
			<div class="phone-mockup">
				<img src="/images/screenshot2.png" alt="Patient Passport">
			</div>

			<div>
				<div class="mono" style="color: var(--accent-peach); margin-bottom: 1rem;">// SYSTEM_CAPABILITY_02</div>
				<h2 class="feature-title">The Patient Passport</h2>
				<p class="feature-desc">
					Instant patient summaries generated on the fly. Track medical history, allergies, and vitals in a unified, encrypted interface.
				</p>

				<ul style="list-style: none; padding: 0; color: var(--text-muted);">
					<li style="margin-bottom: 10px; display: flex; align-items: center;">
						<span style="width: 8px; height: 8px; background: var(--accent-mint); border-radius: 50%; margin-right: 15px; box-shadow: var(--glow-mint);"></span>
						Auto-generated Histories
					</li>
					<li style="margin-bottom: 10px; display: flex; align-items: center;">
						<span style="width: 8px; height: 8px; background: var(--accent-mint); border-radius: 50%; margin-right: 15px; box-shadow: var(--glow-mint);"></span>
						Local Vector Database
					</li>
					<li style="display: flex; align-items: center;">
						<span style="width: 8px; height: 8px; background: var(--accent-mint); border-radius: 50%; margin-right: 15px; box-shadow: var(--glow-mint);"></span>
						Encrypted Storage
					</li>
				</ul>
			</div>
		</section>

		<div class="footer-tag">
			Nair Engineering • The Future of Medicine
		</div>

	</main>

	<Footer />
</body>
</html>
