---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
<head>
	<BaseHead
		title="Vivral by Nair Engineering"
		description="Fully On-Device Medical Intelligence Engineered For Everyone On Earth"
	/>
	
	<style>
		:root {
			/* --- PALETTE EXTRACTED FROM SCREENSHOTS --- */
			--bg-void: #050505;       /* Pure black/void */
			--bg-panel: #121416;      /* Dark grey panel */
			--bg-surface: #1C1E21;    /* Slightly lighter surface */

			--accent-mint: #86F7C6;   /* The glowing green from the UI */
			--accent-mint-dim: rgba(134, 247, 198, 0.1);
			
			--accent-peach: #FFB388;  /* The send button color */
			--accent-peach-glow: rgba(255, 179, 136, 0.4);

			--text-bright: #FFFFFF;
			--text-muted: #889096;
			--text-tech: #5C6369;

			/* --- SIZING --- */
			--radius-pill: 999px;
			--radius-card: 24px;
			
			/* --- FX --- */
			--glow-mint: 0 0 20px rgba(134, 247, 198, 0.25);
			--glow-peach: 0 0 30px rgba(255, 179, 136, 0.3);
			--glass-border: 1px solid rgba(255, 255, 255, 0.08);
			--surface-gradient: linear-gradient(180deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0) 100%);
		}

		body {
			background-color: var(--bg-void);
			/* Subtle noise texture for retro feel */
			background-image: radial-gradient(circle at 50% 0%, #1a2024 0%, var(--bg-void) 60%);
			color: var(--text-bright);
			margin: 0;
			font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Inter', sans-serif;
			overflow-x: hidden;
		}

		main {
			max-width: 1200px;
			margin: 0 auto;
			padding: 0 1.5rem;
			position: relative;
			z-index: 1;
		}

		/* Global "Tech" typography adjustments */
		h1, h2, h3 {
			letter-spacing: -0.02em;
		}
		
		.mono {
			font-family: 'SF Mono', 'Menlo', 'Courier New', monospace;
			font-size: 0.85rem;
			text-transform: uppercase;
			letter-spacing: 0.08em;
		}

		/* --- COMPONENTS --- */

		/* The glowing buttons from screenshot 1 */
		.nav-btn {
			width: 44px;
			height: 44px;
			border-radius: 50%;
			background: rgba(255,255,255,0.05);
			border: 1px solid rgba(255,255,255,0.1);
			display: flex;
			align-items: center;
			justify-content: center;
			box-shadow: 0 0 15px rgba(134, 247, 198, 0.1);
			transition: all 0.3s ease;
			color: var(--accent-mint);
		}
		.nav-btn:hover {
			box-shadow: var(--glow-mint);
			border-color: var(--accent-mint);
		}

		/* The pill warning/badge */
		.tech-badge {
			display: inline-flex;
			align-items: center;
			padding: 0.5rem 1rem;
			background: var(--bg-surface);
			border: var(--glass-border);
			border-radius: var(--radius-pill);
			font-size: 0.8rem;
			color: var(--text-muted);
			backdrop-filter: blur(10px);
			margin-bottom: 2rem;
			box-shadow: 0 4px 20px rgba(0,0,0,0.4);
		}
		.tech-badge span {
			color: var(--accent-mint);
			margin-right: 8px;
		}

		/* --- SECTIONS --- */

		.hero-section {
			min-height: 90vh;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			text-align: center;
			padding-top: 6rem;
			position: relative;
		}

		/* Background ambient glow */
		.ambient-glow {
			position: absolute;
			top: -10%;
			left: 50%;
			transform: translateX(-50%);
			width: 600px;
			height: 600px;
			background: radial-gradient(circle, rgba(134, 247, 198, 0.08) 0%, rgba(0,0,0,0) 70%);
			pointer-events: none;
			z-index: -1;
		}

		.hero-title {
			font-size: clamp(3rem, 6vw, 5rem);
			font-weight: 700;
			line-height: 1;
			margin-bottom: 1.5rem;
			background: linear-gradient(180deg, #fff 0%, #aab 100%);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			text-shadow: 0 0 40px rgba(255,255,255,0.1);
		}

		.hero-sub {
			font-size: 1.25rem;
			color: var(--text-muted);
			max-width: 600px;
			line-height: 1.6;
			margin-bottom: 3rem;
		}

		/* The "Input Island" CTA - inspired by Screenshot 1 bottom bar */
		.input-island-container {
			background: rgba(30, 34, 38, 0.6);
			border: var(--glass-border);
			border-radius: 32px;
			padding: 10px;
			display: flex;
			align-items: center;
			width: 100%;
			max-width: 400px;
			backdrop-filter: blur(15px);
			-webkit-backdrop-filter: blur(15px);
			box-shadow: 0 10px 40px rgba(0,0,0,0.5);
			position: relative;
			overflow: hidden;
		}

		/* The "Mock" input area */
		.input-island-text {
			flex: 1;
			padding: 0 1.5rem;
			color: var(--text-tech);
			font-size: 0.95rem;
		}

		/* The Peach Send Button */
		.btn-action {
			width: 48px;
			height: 48px;
			border-radius: 20px;
			background: var(--accent-peach);
			border: none;
			display: flex;
			align-items: center;
			justify-content: center;
			cursor: pointer;
			box-shadow: var(--glow-peach);
			transition: transform 0.2s;
		}
		.btn-action:hover {
			transform: scale(1.05);
			box-shadow: 0 0 40px var(--accent-peach-glow);
		}
		.btn-action svg {
			fill: #3e2010; /* Dark contrast color for icon inside peach button */
			width: 20px;
			height: 20px;
		}

		/* --- CONTENT GRIDS --- */
		.feature-grid {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
			align-items: center;
			padding: 8rem 0;
		}

		.feature-grid.reverse {
			direction: rtl; /* Quick hack to flip order, reset text direction inside */
		}
		.feature-grid.reverse > * {
			direction: ltr;
		}

		@media (max-width: 900px) {
			.feature-grid, .feature-grid.reverse {
				grid-template-columns: 1fr;
				direction: ltr;
				gap: 3rem;
			}
		}

		/* --- CARD STYLING (Inspired by Screenshot 2 "Passport") --- */
		.data-card {
			background: var(--bg-panel);
			border: var(--glass-border);
			border-radius: var(--radius-card);
			padding: 2.5rem;
			position: relative;
			overflow: hidden;
		}

		/* Top glowing rim effect */
		.data-card::before {
			content: '';
			position: absolute;
			top: 0; left: 0; right: 0;
			height: 1px;
			background: linear-gradient(90deg, transparent, var(--accent-mint), transparent);
			opacity: 0.5;
		}

		.feature-title {
			font-size: 2rem;
			margin: 0 0 1rem;
		}
		
		.feature-desc {
			color: var(--text-muted);
			line-height: 1.6;
			margin-bottom: 2rem;
		}

		/* Data visualization details */
		.data-row {
			display: flex;
			justify-content: space-between;
			border-bottom: 1px solid rgba(255,255,255,0.05);
			padding: 1rem 0;
			font-family: 'SF Mono', monospace;
			font-size: 0.9rem;
		}
		.data-label { color: var(--text-tech); }
		.data-value { color: var(--accent-mint); }

		/* Phone Frame Mockup - REMOVED BORDERS AND EFFECTS */
		.phone-mockup {
			/* Removed background, border, border-radius, box-shadow, and aspect-ratio */
			position: relative;
			max-width: 380px;
			margin: 0 auto;
		}
		.phone-mockup img {
			width: 100%;
			height: auto;
			display: block;
			/* Removed object-fit and opacity */
		}
		
		/* Removed the reflection overlay pseudo-element */

		.footer-tag {
			text-align: center;
			padding: 4rem 0;
			color: var(--text-tech);
			font-size: 0.8rem;
			letter-spacing: 0.2em;
			text-transform: uppercase;
			border-top: 1px solid rgba(255,255,255,0.05);
			margin-top: 4rem;
		}

	</style>
</head>

<body>
	<Header />

	<main>
		<div class="ambient-glow"></div>

		<section class="hero-section">
			
			<div class="tech-badge">
				<span>●</span> VIVRAL
			</div>

			<h1 class="hero-title">
				Vivral<br>
				<span style="color: var(--accent-mint); -webkit-text-fill-color: var(--accent-mint);">by Nair Engineering.</span>
			</h1>

			<p class="hero-sub">
				On-device Medical Intelligence Engineering For Everyone On Earth.
				Fast. Safe. Private.
			</p>

			<div class="input-island-container">
				<div class="input-island-text">Join the waitlist...</div>
				<button class="btn-action">
					<svg viewBox="0 0 24 24"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
				</button>
			</div>
			
			<div style="margin-top: 1rem; font-size: 0.75rem; color: var(--text-tech);">
				NAIR ENGINEERING
			</div>
		</section>

		<section class="feature-grid">
			<div class="phone-mockup">
				<img src="/IMG_1656-portrait.png" alt="Vivral Home">
			</div>
			
			<div class="data-card">
				<div class="mono" style="color: var(--accent-mint); margin-bottom: 1rem;">// SYSTEM_CAPABILITY_01</div>
				<h2 class="feature-title">Diagnostic Reasoning</h2>
				<p class="feature-desc">
					Vivral gives you trusted medical answers powered by our advanced Medical Reasoning Engine, ensuring safe, multilayered guidance every time.
				</p>
				
				<div class="data-row">
					<span class="data-label">LATENCY</span>
					<span class="data-value">0ms (Local)</span>
				</div>
				<div class="data-row">
					<span class="data-label">PRIVACY</span>
					<span class="data-value">Complete. (Local)</span>
				</div>
		</section>

		<section class="feature-grid reverse">
			<div class="phone-mockup">
				<img src="/IMG_1657-left.png" alt="Patient Passport">
			</div>

			<div>
				<div class="mono" style="color: var(--accent-peach); margin-bottom: 1rem;">// SYSTEM_CAPABILITY_02</div>
				<h2 class="feature-title">NE Patient Passport</h2>
				<p class="feature-desc">
					All your essential medical details stay securely on your device. Your Patient Passport never leaves your phone: you control who gets access. 
				</p>
			</div>
		</section>

		<div class="footer-tag">
			Nair Engineering • The Future of Medicine
		</div>

	</main>

	<Footer />
</body>
</html>
