<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NAIR // VIVRAL</title>
    
    <style>
        /* --- PALETTE: Warm Humanist Futurism --- */
        :root {
            --bg-deep: #050508;
            --bg-gradient-start: #0f0c1a;
            --bg-gradient-end: #000000;
            
            --coral: #FFBFA8;        /* Soft Coral Accent */
            --coral-deep: #FF7E5F;   /* Vibrant Coral */
            --mint: #C9FFE8;         /* Mint Accent */
            --glass-border: rgba(255, 255, 255, 0.1);
            --glass-bg: rgba(255, 255, 255, 0.03);
            
            --curve-xl: 40px;
            --curve-md: 24px;
            
            --font-main: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            --font-display: "Futura", "Helvetica Neue", sans-serif; /* Wide & Geometric */
            
            --ease-smooth: cubic-bezier(0.4, 0.0, 0.2, 1);
        }

        /* --- RESET --- */
        * { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            background-color: var(--bg-deep);
            color: #ffffff;
            font-family: var(--font-main);
            overflow-x: hidden;
            font-size: 16px;
            -webkit-font-smoothing: antialiased;
        }

        /* --- UI COMPONENTS --- */
        
        /* 1. Frosted Header */
        header {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 90%;
            max-width: 1200px;
            padding: 16px 32px;
            background: rgba(20, 20, 30, 0.6);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 100px; /* Pill Shape */
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            transition: opacity 0.5s ease;
        }
        
        header.fade-out {
            opacity: 0;
            pointer-events: none;
        }
        
        .brand {
            font-family: var(--font-display);
            font-weight: 700;
            letter-spacing: 0.1em;
            color: var(--coral);
            text-transform: uppercase;
            font-size: 0.9rem;
        }
        
        .status-dot {
            width: 8px;
            height: 8px;
            background: var(--mint);
            border-radius: 50%;
            box-shadow: 0 0 10px var(--mint);
            animation: pulse 2s infinite;
        }

        /* 2. Glass Cards */
        .glass-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: var(--curve-xl);
            padding: 40px;
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
            transition: transform 0.5s var(--ease-smooth);
        }
        
        .glass-card:hover {
            transform: translateY(-5px);
            border-color: rgba(255, 255, 255, 0.2);
        }

        /* 3. Typography */
        h1, h2 {
            font-family: var(--font-display);
            line-height: 1.1;
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #fff 0%, var(--coral) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* --- SECTIONS --- */
        
        /* SECTION 1: CINEMATIC LANDING */
        .cinematic-wrapper {
            height: 100vh;
            width: 100%;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at center, #1c1426 0%, #000 70%);
            overflow: hidden;
            z-index: 10;
        }

        /* Starfield - True 3D Warp */
        .starfield {
            position: fixed; /* Takes over entire screen */
            top: 0; left: 0; width: 100vw; height: 100vh;
            pointer-events: none;
            opacity: 0;
            transition: opacity 1.5s ease;
            z-index: 9999; /* On top of everything */
            background: black; /* Deep space */
            
            /* 3D Engine */
            perspective: 800px;
            transform-style: preserve-3d;
            overflow: hidden;
        }
        
        .starfield.active {
            opacity: 1;
        }
        
        .star {
            position: absolute;
            background: white;
            border-radius: 50%;
            opacity: 0;
            /* Box shadow adds a tiny glow without increasing physical size */
            box-shadow: 0 0 2px rgba(255,255,255,0.8);
            animation: warp-speed 3s infinite linear;
        }

        @keyframes warp-speed {
            0% {
                transform: translate3d(0, 0, -800px);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            100% {
                transform: translate3d(0, 0, 800px);
                opacity: 0;
            }
        }

        .phase-container {
            text-align: center;
            position: absolute;
            width: 100%;
            opacity: 0;
            transition: opacity 0.8s ease, transform 0.8s var(--ease-smooth);
            transform: scale(0.95);
            pointer-events: none;
        }
        
        .phase-container.active {
            opacity: 1;
            transform: scale(1);
        }

        /* Phase Styles */
        .text-tracking-lg { letter-spacing: 0.5em; text-transform: uppercase; font-size: 1.2rem; color: rgba(255,255,255,0.6); margin-bottom: 1rem;}
        .text-hero-lg { font-size: clamp(3rem, 8vw, 6rem); font-weight: 800; color: #fff; text-shadow: 0 0 30px rgba(255,255,255,0.3); }
        
        /* Hologram Effect */
        .hologram-text {
            font-size: 5rem;
            font-weight: 700;
            color: var(--mint);
            position: relative;
            display: inline-block;
            text-shadow: 0 0 15px var(--mint);
        }
        .hologram-text::after {
            content: attr(data-text);
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: repeating-linear-gradient(transparent 0px, transparent 2px, rgba(0,0,0,0.5) 3px);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            z-index: 2;
        }
        
        .surreal-gradient {
            background: linear-gradient(180deg, #ffffff 0%, #a0a0a0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 0 20px rgba(255,255,255,0.5));
            font-size: clamp(4rem, 10vw, 8rem);
            font-weight: 800;
        }

        /* SECTION 2: PRODUCT */
        .content-section {
            padding: 120px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
        }

        .img-container {
            border-radius: var(--curve-xl);
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.6);
            border: 1px solid var(--glass-border);
            position: relative;
        }
        
        .img-container img {
            width: 100%;
            height: auto;
            display: block;
            transition: transform 0.6s var(--ease-smooth);
        }
        
        .img-container:hover img {
            transform: scale(1.05);
        }

        .pill-badge {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 50px;
            background: rgba(255, 126, 95, 0.2);
            color: var(--coral-deep);
            border: 1px solid rgba(255, 126, 95, 0.3);
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 0.1em;
            margin-bottom: 24px;
        }

        /* SECTION 3: REASONING */
        .reasoning-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 24px;
            margin-top: 40px;
        }
        
        .stat-card {
            background: rgba(255,255,255,0.05);
            border-radius: var(--curve-md);
            padding: 24px;
            text-align: center;
        }
        
        .stat-val { font-size: 3rem; font-weight: 700; color: var(--coral); }
        .stat-label { font-size: 0.8rem; color: rgba(255,255,255,0.5); text-transform: uppercase; letter-spacing: 1px; }

        /* SECTION 4: MISSION */
        .mission-wrapper {
            text-align: center;
            max-width: 800px;
            margin: 0 auto;
            padding: 100px 20px;
        }

        /* --- ANIMATIONS --- */
        @keyframes pulse { 0% { opacity: 0.5; } 50% { opacity: 1; } 100% { opacity: 0.5; } }
        
        /* --- MOBILE --- */
        @media (max-width: 900px) {
            .grid-2 { grid-template-columns: 1fr; gap: 40px; }
            .hologram-text { font-size: 3rem; }
            header { width: 95%; padding: 12px 20px; }
            .content-section { padding: 80px 20px; }
        }
    </style>
</head>
<body>

    <!-- 1. FIXED HEADER -->
    <header id="main-header">
        <div class="brand">NAIR ENGINEERING</div>
        <div style="display: flex; align-items: center; gap: 10px;">
        </div>
    </header>

    <main>

        <!-- 2. CINEMATIC INTRO (The Swift Logic) -->
        <section class="cinematic-wrapper" id="intro-sequence">
            <div class="starfield" id="starfield"></div>

            <!-- Phase 1: Future -->
            <div class="phase-container" id="phase-1">
                <div class="text-tracking-lg">THE FUTURE</div>
                <div class="text-hero-lg">OF MEDICINE</div>
            </div>

            <!-- Phase 2: Powered By -->
            <div class="phase-container" id="phase-2">
                <div class="text-tracking-lg">POWERED BY</div>
            </div>

            <!-- Phase 3: Hologram 1 (Swift) -->
            <div class="phase-container" id="phase-3">
                <div style="display: flex; align-items: baseline; justify-content: center; gap: 20px;">
                    <span class="hologram-text" data-text="VIVRAL">VIVRAL</span>
                    <span style="font-size: 3rem; font-style: italic; color: rgba(255,255,255,0.7);">SWIFT</span>
                </div>
            </div>

            <!-- Phase 4: Hologram 2 (Pro) -->
            <div class="phase-container" id="phase-4">
                <div style="display: flex; align-items: baseline; justify-content: center; gap: 20px;">
                    <span class="hologram-text" style="color: var(--coral-deep); text-shadow: 0 0 15px var(--coral-deep);" data-text="VIVRAL">VIVRAL</span>
                    <span style="font-size: 3rem; font-weight: 900; letter-spacing: 5px;">PRO</span>
                </div>
            </div>

            <!-- Phase 5: Surreal Reveal (Final Landing) -->
            <div class="phase-container" id="phase-5">
                <div class="text-tracking-lg" style="letter-spacing: 1em;">VIVRAL</div>
                <div class="surreal-gradient">SURREAL</div>
                <div style="margin-top: 20px; font-size: 0.9rem; letter-spacing: 0.2em; color: rgba(255,255,255,0.8);">SUPREME MEDICAL INTELLIGENCE</div>
                
                <div style="margin-top: 60px; animation: pulse 2s infinite;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="rgba(255,255,255,0.5)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
                </div>
            </div>
        </section>

        <!-- 3. PRODUCT HERO -->
        <section class="content-section">
            <div class="grid-2">
                <div>
                    <span class="pill-badge">NE.01R</span>
                    <h1 style="font-size: 3.5rem; margin-bottom: 24px;">Medical Intelligence.</h1>
                    <p style="color: rgba(255,255,255,0.7); font-size: 1.1rem; line-height: 1.8; max-width: 450px;">
                        Offline. Instant. Alive. Vivral puts surreal medical intelligence in your pocket using a design language that feels like home.
                    </p>
                </div>
                <div class="img-container">
                    <img src="/IMG_1656-portrait.png" alt="Vivral UI">
                </div>
            </div>
        </section>

        <!-- 4. REASONING & SPECS -->
        <section class="content-section">
            <div class="glass-card">
                <div class="grid-2">
                    <div>
                        <h2 style="font-size: 2.5rem; margin-bottom: 20px;">The Reasoning Engine.</h2>
                        <p style="color: rgba(255,255,255,0.7); margin-bottom: 30px;">
                            Most AIs guess. Vivral calculates. Powered by local compute that respects your privacy and your battery life.
                        </p>
                        <div class="reasoning-stats">
                            <div class="stat-card">
                                <div class="stat-val">0ms</div>
                                <div class="stat-label">Latency</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-val">100%</div>
                                <div class="stat-label">Local</div>
                            </div>
                        </div>
                    </div>
                    <!-- Abstract Visualization -->
                    <div style="height: 300px; background: radial-gradient(circle, rgba(255, 126, 95, 0.1) 0%, transparent 70%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <div style="width: 200px; height: 200px; border: 1px solid var(--coral); border-radius: 50%; animation: pulse 3s infinite;"></div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 5. PRIVACY -->
        <section class="content-section">
            <div class="grid-2">
                <div class="img-container" style="order: 2;">
                    <img src="/IMG_1657-left.png" alt="Privacy UI">
                </div>
                <div style="order: 1;">
                    <span class="pill-badge" style="background: rgba(201, 255, 232, 0.1); color: var(--mint); border-color: rgba(201, 255, 232, 0.2);">SECURE ENCLAVE</span>
                    <h2 style="font-size: 2.5rem; margin-bottom: 24px;">Your Data.<br>Your Vault.</h2>
                    <p style="color: rgba(255,255,255,0.7); font-size: 1.1rem; line-height: 1.8;">
                        Your health data is radioactive. It should never leave your possession. Vivral operates inside a secure enclave. No uploads. No leaks. No "Cloud". Don't ever worry about your medical information leaving your hands.
                    </p>
                </div>
            </div>
        </section>

        <!-- 6. MISSION -->
        <section class="mission-wrapper">
            <h2 class="gradient-text" style="font-size: 3rem; margin-bottom: 24px;">The Mission</h2>
            <p style="font-size: 1.5rem; color: rgba(255,255,255,0.9); font-weight: 300; line-height: 1.6;">
                "We believe world-class healthcare should be accessible to everyone: at minimal cost and without barriers."
            </p>
            <div style="margin-top: 60px; opacity: 0.5; font-size: 0.8rem; letter-spacing: 2px;">
                NAIR ENGINEERING Â© 2025
            </div>
        </section>

    </main>

    <script>
        // --- CINEMATIC SEQUENCE ENGINE ---
        
        async function runCinematicIntro() {
            const wait = (ms) => new Promise(r => setTimeout(r, ms));
            const phases = [1, 2, 3, 4, 5].map(i => document.getElementById(`phase-${i}`));
            const starfield = document.getElementById('starfield');
            const header = document.getElementById('main-header');

            // 0. GENERATE STARS (Refined for realism)
            // Smaller, sharper, more distant feel.
            starfield.innerHTML = '';
            for(let i=0; i<600; i++) {
                const s = document.createElement('div');
                s.className = 'star';
                // Position across full viewport
                s.style.left = Math.random() * 100 + 'vw'; 
                s.style.top = Math.random() * 100 + 'vh';
                
                // Much smaller size for realism (0.5px to 2px)
                const size = Math.random() * 1.5 + 0.5;
                s.style.width = size + 'px';
                s.style.height = size + 'px';
                
                // Random opacity for twinkling depth
                s.style.opacity = Math.random() * 0.7 + 0.3;
                
                // Randomize animation delays and speed
                s.style.animationDelay = Math.random() * 2 + 's';
                s.style.animationDuration = (Math.random() * 2 + 0.8) + 's'; 
                
                starfield.appendChild(s);
            }

            // --- SEQUENCE START ---

            // 1. THE FUTURE
            phases[0].classList.add('active');
            await wait(2000);
            phases[0].classList.remove('active');
            await wait(300);

            // 2. POWERED BY
            phases[1].classList.add('active');
            await wait(1500);
            phases[1].classList.remove('active');
            await wait(300);

            // 3. VIVRAL SWIFT
            phases[2].classList.add('active');
            await wait(2500);
            phases[2].classList.remove('active');
            await wait(300);

            // 4. VIVRAL PRO
            phases[3].classList.add('active');
            await wait(2500);
            phases[3].classList.remove('active');

            // 5. BRIDGE (Stars Takeover - "Entire Screen")
            // Fade out header temporarily for immersion
            header.classList.add('fade-out');
            
            // Activate Full Screen Stars
            starfield.classList.add('active');
            
            // Wait for warp speed to register
            await wait(2500); 
            
            // Fade out stars
            starfield.classList.remove('active');
            header.classList.remove('fade-out');
            
            await wait(800);

            // 6. SURREAL REVEAL
            phases[4].classList.add('active');
        }

        // Use DOMContentLoaded to ensure elements are ready before running
        document.addEventListener('DOMContentLoaded', runCinematicIntro);
        
        // --- SCROLL REVEAL OBSERVER ---
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if(entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.content-section').forEach(sec => {
            sec.style.opacity = 0;
            sec.style.transform = 'translateY(40px)';
            sec.style.transition = 'all 1s cubic-bezier(0.4, 0.0, 0.2, 1)';
            observer.observe(sec);
        });

    </script>
</body>
