---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
<head>
	<BaseHead
		title="Vivral — Private, Local Medical Intelligence"
		description="By Nair Engineering — A fully on-device clinical AI system engineered for physicians."
	/>
	<style>
		:root {
			--bg: #0E1214;
			--bg-elevated: #161B1E;
			--bg-card: #1A1F23;

			--accent-mint: #98FFCB;
			--accent-teal: #6CEACB;
			--accent-yellow: #FFE8A3;

			--text-primary: #ECF4EE;
			--text-secondary: #A9B6B0;
			--text-muted: #7A8480;

			--radius-xl: 32px;
			--radius-lg: 22px;
			--radius-md: 14px;

			--shadow-soft: 0 4px 30px rgba(0,0,0,0.3);
		}

		body {
			background: var(--bg);
			color: var(--text-primary);
			margin: 0;
			font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
		}

		main {
			max-width: 1300px;
			margin: 0 auto;
			padding: 4rem 1.5rem 6rem;
		}

		.section {
			display: grid;
			grid-template-columns: 1.1fr 1fr;
			gap: 4rem;
			align-items: center;
			padding: 6rem 0;
		}

		.section.reverse {
			grid-template-columns: 1fr 1.1fr;
		}

		@media (max-width: 900px) {
			.section,
			.section.reverse {
				grid-template-columns: 1fr;
			}
		}

		.heading-xl {
			font-size: clamp(2.5rem, 5vw, 4.1rem);
			font-weight: 600;
			line-height: 1.1;
			margin: 0 0 1.25rem;
		}

		.text-lg {
			font-size: 1.35rem;
			color: var(--text-secondary);
			line-height: 1.6;
			max-width: 45ch;
		}

		/* Screenshot containers */
		.phone-frame {
			width: 100%;
			max-width: 420px;
			border-radius: var(--radius-xl);
			overflow: hidden;
			box-shadow: var(--shadow-soft);
			background: var(--bg-elevated);
			border: 1px solid rgba(255,255,255,0.05);
		}

		.phone-frame img {
			display: block;
			width: 100%;
			height: auto;
		}

		/* Mint retro badge */
		.badge {
			display: inline-block;
			padding: 0.4rem 1rem;
			border-radius: var(--radius-md);
			background: rgba(152,255,203,0.12);
			border: 1px solid rgba(152,255,203,0.35);
			color: var(--accent-mint);
			font-size: 0.85rem;
			letter-spacing: 0.06em;
			margin-bottom: 1.5rem;
		}

		/* Thin retro circle accent like Framer */
		.circle-accent {
			width: 26px;
			height: 26px;
			border-radius: 999px;
			border: 1px solid rgba(255,255,255,0.08);
			margin-top: 2rem;
		}
	</style>
</head>

<body>
	<Header />

	<main>

		<!-- ============================= -->
		<!-- HERO SECTION -->
		<!-- ============================= -->
		<section class="section">
			<div>
				<div class="badge">On-Device Medical Intelligence</div>
				<h1 class="heading-xl">Vivral<br />Private. Local. Designed for Physicians.</h1>

				<p class="text-lg">
					Powered entirely on-device, Vivral helps clinicians diagnose, document, and plan —
					with zero cloud dependencies and a retro-futuristic interface inspired by your iOS app.
				</p>

				<div class="circle-accent"></div>
			</div>

			<div class="phone-frame">
				<!-- SCREENSHOT SLOT 1  
				     Replace example.png with your screenshot:
				     <img src="/images/yourimage.png" alt="Vivral Screenshot" />
				-->
				<img src="/images/screenshot1.png" alt="Vivral Screenshot">
			</div>
		</section>

		<!-- ============================= -->
		<!-- ABOUT SECTION -->
		<!-- ============================= -->
		<section class="section reverse">
			<div class="phone-frame">
				<!-- SCREENSHOT SLOT 2 -->
				<img src="/images/screenshot2.png" alt="Patient Passport">
			</div>

			<div>
				<div class="badge">About Vivral</div>
				<h2 class="heading-xl">Private Intelligence Made for Rural Providers</h2>

				<p class="text-lg">
					Vivral runs fully on the patient's device, enabling real-time clinical reasoning even
					in low-resource environments. No PHI ever leaves the phone — perfect for rural medicine.
				</p>
			</div>
		</section>

		<!-- ============================= -->
		<!-- DIAGNOSE SECTION -->
		<!-- ============================= -->
		<section class="section">
			<div>
				<div class="badge">Diagnosis</div>
				<h2 class="heading-xl">Diagnose with Confidence.</h2>

				<p class="text-lg">
					Vivral listens to the clinical encounter and constructs differential diagnoses with the same
					reasoning you'd expect from a thoughtful attending.
				</p>
			</div>

			<div class="phone-frame">
				<!-- SCREENSHOT SLOT 3 -->
				<img src="/images/screenshot3.png" alt="Diagnosis View">
			</div>
		</section>

		<!-- ============================= -->
		<!-- DOCUMENT SECTION -->
		<!-- ============================= -->
		<section class="section reverse">
			<div class="phone-frame">
				<!-- SCREENSHOT SLOT 4 -->
				<img src="/images/screenshot4.png" alt="Clinical Note View">
			</div>

			<div>
				<div class="badge">Documentation</div>
				<h2 class="heading-xl">Document in Seconds.</h2>

				<p class="text-lg">
					Automatically generated clinical notes — structured, accurate, and formatted for physicians.
				</p>
			</div>
		</section>

		<!-- ============================= -->
		<!-- PLAN SECTION -->
		<!-- ============================= -->
		<section class="section">
			<div>
				<div class="badge">Care Planning</div>
				<h2 class="heading-xl">Plan Smarter.</h2>

				<p class="text-lg">
					Vivral helps keep track of visits, labs, and next-steps — intelligently updating as care evolves.
				</p>
			</div>

			<div class="phone-frame">
				<!-- SCREENSHOT SLOT 5 -->
				<img src="/images/screenshot5.png" alt="Calendar View">
			</div>
		</section>

	</main>

	<Footer />
</body>
</html>
